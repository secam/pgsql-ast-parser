{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "name": "Attach UTs",
            "request": "attach",
            "port": 9248,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**",
            ],
            "skipFiles": [
                "<node_internals>/**/*",
                "**/loader.js", // webpack hmr reloader
                "node_modules/core-js/**",
                "output/**",
            ]
        }
    ]
}
