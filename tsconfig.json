{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": [],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "lib",
        "outDir": "lib",
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
